{
    "eslint.enable": true,
    "eslint.validate": [
        "javascript", {
            "language": "html",
            "autoFix": true
        }, {
            "language": "vue",
            "autoFix": true
        }
    ],
    "files.exclude": {
        "**/.vscode": true,
        "dist": true,
        "**/node_modules": true,
        "package-lock.json": true,
        "yarn.lock": true
    },
    // Files excluded from counting.
    "line-counter.excludes": [
        "**/.vscode/**",
        "**/node_modules/**",
        "package-lock.json"
    ],

    // 
    "line-counter.includes": [
        "**/*.js",
        "**/*.json",
        "**/*.scss",
        "**/*.vue",
        "**/*.index"
    ],
    "git.ignoreLimitWarning": true,
    "node-module-intellisense.modulePaths": [
        "${workspaceRoot}/src/client/script/modules"
    ],
    "terminal.integrated.fontSize": 12
}